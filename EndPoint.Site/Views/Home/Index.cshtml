@using MyWeb.Common
@model EndPoint.Site.Models.ViewModels.Personal.PersonalViewModel
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
    var home = Model.Homes.FirstOrDefault();
    var about = Model.Abouts.FirstOrDefault();
    var service = Model.Services.FirstOrDefault();
    var price = Model.Prices.FirstOrDefault();
    var clients = Model.Clients;
    var contact = Model.Contacts.FirstOrDefault();
    var projects = Model.Projects.FirstOrDefault();
    var projectTypes = new List<string>();
    foreach (var item in projects.ProjectItems)
    {
        var splitted = item.ProjectType.Split(" ");
        foreach (var str in splitted)
        {
            projectTypes.AddIfNotExists(str);
        }
    }
    var features = Model.Features.FirstOrDefault();
    var counters = Model.Counters;
    var teams = Model.Teams.FirstOrDefault();
}
<!-- Theme Header Start -->
<header id="home" class="full-height bg-img" data-src="@home.Image">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <div class="header-content">
                    <div class="header-content-inner">
                        <div class="section-title">
                            <h1 class="section-title-divider animated zoomIn"><span class="primary-color">@home.Title</span></h1>
                            <p>@home.Description</p>
                        </div>
                        <a class="btn btn-default btn-xl" href="@home.Link">اطلاعات بیشتر</a> <!-- THEME DEFAULT BUTTON -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Theme Header End -->

<!-- About Section -->
<section id="about" class="section-parallax section-typo-white" data-src="@about.HeaderImage" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg primary-section-bg"></span>
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 text-center">
                <div class="section-title">
                    <h2 class="section-title-divider">@about.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>@about.Description</p>
                </div>
                <a class="btn btn-default btn-xl btn-bg-white" href="@about.Link">شروع کنید!</a> <!-- THEME DEFAULT BUTTON WITH WHITE BACKGROUND -->
            </div>
        </div>
    </div>
</section>

<!-- Who we are -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="col-inner">
                    <div class="section-sub-title">
                        <h3 class="under-line">@about.Title2</h3>
                    </div>
                    <p>@about.Description2</p>
                </div>
                <div class="col-inner">
                    <div class="section-sub-title">
                        <h3 class="under-line">@about.TaskTitle</h3>
                    </div>
                    <ul class="star-list">
                        @foreach (var item in about.AboutTasks)
                        {
                            <li>@item.Title</li>
                        }
                    </ul>
                </div>
                <a class="btn btn-default btn-xl btn-normal margin-top-20" href="#">بیشتر بخوانید</a> <!-- THEME DEFAULT BUTTON WITH NORMAL STYLE -->
            </div>
            <div class="col-md-6 hidden-sm hidden-xs media">
                <img alt="" src="@about.Image" class="img-responsive" />
            </div>
        </div>
    </div>
</section>
<!-- About Section End-->

<!-- Support Section Start -->
<section class="section-parallax" data-src="@Model.SupportTop.Image" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg black-section-bg"></span>
    <div class="container section-typo-white">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 text-center">
                <h2 class="inline-content"><span>@Model.SupportTop.Title</span></h2>
                <!-- SECTION TITLE -->
                <a class="btn btn-default btn-xl btn-inline" href="@Model.SupportTop.Link">@Model.SupportTop.LinkTitle</a>
            </div>
        </div>
    </div>
</section>
<!-- Support Section End -->

<!-- Service Section Start -->
<section class="padding-bottom-50" id="service">
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2 class="section-title-divider primary-divider">@service.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>@service.Description</p>
                </div>
            </div>
        </div>
        <div class="row service-box-wrap">
            @foreach (var item in service.ServiceItems)
            {
                <div class="col-md-3 col-sm-6 service-box-col">
                    <figure>
                        <div class="service-image">
                            <i class="@item.Icon"></i>
                        </div>
                    </figure>
                    <h4 class="service-title title-bordered">@item.Title</h4>
                    <p class="service-content">@item.Description</p>
                </div>
            }
        </div>
    </div>
</section>
<!-- Service Section End -->

<!-- Support Section Start -->
<section class="section-parallax" data-src="@Model.SupportMiddle.Image" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg black-section-bg"></span>
    <div class="container section-typo-white">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 text-center">
                <h2 class="inline-content"><span>@Model.SupportMiddle.Title</span></h2>
                <!-- SECTION TITLE -->
                <a class="btn btn-default btn-xl btn-inline" href="@Model.SupportMiddle.Link">@Model.SupportMiddle.LinkTitle</a>
            </div>
        </div>
    </div>
</section>
<!-- Support Section End -->

<!-- Features Section Start -->
<section class="padding-bottom-50" id="features">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2 class="section-title-divider primary-divider">@features.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>@features.Description</p>
                </div>
            </div>
        </div>
        <div class="row margin-bottom-0">
            @foreach (var item in features.FeatureItems)
            {
                <div class="col-sm-4">
                    <div class="media feature-box">
                        <div class="media-left">
                            <span class="feature-icon">
                                <i class="@item.Icon"></i>
                            </span>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@item.Title</h4>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Features Section End -->

<!-- Counter Section Start -->
@{
    var counterImage = counters.FirstOrDefault().Image;
}
<section class="section-parallax padding-bottom-50" data-src="@counterImage" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg primary-section-bg"></span>
    <div class="container section-typo-white">
        <div class="row text-center">
            @foreach (var item in counters)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="counter-wrap">
                        <span class="counter-icon">
                            <i class="@item.Icon"></i>
                        </span>
                        <h3 class="counter" data-counter="@item.Count">
                            @item.Count
                        </h3>
                        <span class="counter-text">
                            @item.Title
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Counter Section End -->

<!-- Our Works Section Start -->
<section id="portfolio">
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2 class="section-title-divider primary-divider">@projects.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>@projects.Description</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="portfolio-button-set margin-bottom-30">
                    <a class="btn btn-default btn-xl btn-normal portfolio filter-active" href="#">همه</a>
                    @foreach (var item in projectTypes)
                    {
                        <a class="btn btn-default btn-xl btn-normal portfolio" data-filter=".@item" href="#">@item.Replace("-"," ")</a>
                    }
                </div>
                <div class="grid" data-gutter="20" data-col="3">
                    @foreach (var item in projects.ProjectItems)
                    {
                        <div class="portfolio-item element-item @item.ProjectType">
                            <img alt="" src="@item.Image" class="img-responsive" />
                            <div class="portfolio-content">
                                <div class="portfolio-content-inner">
                                    <div class="portfolio-inner">
                                        <h4><a href="@item.Link" class="link-white">@item.Title</a></h4>
                                        <p class="portfolio-description">@item.Description</p>
                                        <p class="portfolio-popup">
                                            <a class="link-white" href="@item.Image" data-lightbox="portfolio" data-title="Landing Page">
                                                <span class="fa fa-arrows-alt"></span>
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Our Works Section End -->

<!-- Support Section Start -->
<section class="section-parallax" data-src="@Model.SupportBottom.Image" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg black-section-bg"></span>
    <div class="container section-typo-white">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 text-center">
                <h2 class="inline-content"><span>@Model.SupportBottom.Title</span></h2>
