            </div>
        </div>
    </div>
</section>
<!-- Support Section End -->

<!-- Our Plans Section Start -->
<section class="padding-bottom-50" id="plans">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2 class="section-title-divider primary-divider">@price.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>
                        @price.Description
                    </p>
                </div>
            </div>
        </div>
        <div class="row text-center">
            @foreach (var item in price.PriceItems)
            {
                var pricingTableStyle = item.Featured ? "featured" : "";
                <div class="col-md-4 animated" data-animation="fadeInUp" data-animation-delay="0">
                    <div class="pricing-table @pricingTableStyle">
                        <div class="price-main">
                            <div class="price-amount">
                                <h3>@item.Amount ریال <br><span>در ماه</span></h3>
                            </div>
                            <div class="price-title">
                                <h2>@item.Title</h2>
                            </div>
                            <div class="price-content">
                                <p>@item.Description</p>
                                <p class="text-center"><a class="btn btn-default btn-xl btn-normal" href="@item.Link">اکنون سفارش دهید</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Our Plans Section End -->

<!-- Support Section Start -->
<section class="section-parallax" data-src="@Model.SupportFooter.Image" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg black-section-bg"></span>
    <div class="container section-typo-white">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 text-center">
                <h2 class="inline-content"><span>@Model.SupportFooter.Title</span></h2>
