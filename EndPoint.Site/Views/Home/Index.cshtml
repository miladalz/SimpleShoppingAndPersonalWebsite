<!-- Contact Section Start -->
<section class="contact-section" id="contact">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="section-title">
                    <h2 class="section-title-divider primary-divider">@contact.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>
                        @contact.Description
                    </p>
                </div>
            </div>
        </div>
        <div class="row text-center">
            @foreach (var item in contact.ContactItems)
            {
                <div class="col-sm-4">
                    <div class="@item.Type">
                        <p class="contact-icons"><i class="@item.Icon"></i></p>
                        <div class="padding-tb-20">
                            <p>
                                @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row text-center">
            <div class="contact-form">
                <p id="contact-status-msg" class="hide"></p>
                <div class="col-md-4 col-md-offset-2 padding-bottom-20">
                    <div class="form-group">
                        <input id="txtMessageName" class="form-control" name="txtMessageName" autocomplete="off" placeholder="نام" data-bv-field="txtMessageName" type="text" />
                    </div>
                </div>
                <div class="col-md-4 padding-bottom-20">
                    <div class="form-group">
                        <input id="txtMessageEmail" class="form-control" name="txtMessageEmail" autocomplete="off" placeholder="ایمیل" data-bv-field="txtMessageEmail" type="email">
                    </div>
                </div>
                <span class="clearfix"></span>
                <div class="contact-message col-md-8 col-md-offset-2">
                    <div class="form-group margin-bottom-0">
                        <textarea id="txtMessageText" class="form-control textarea" rows="3" name="txtMessageText" placeholder="پیام" data-bv-field="txtMessageText"></textarea>
                    </div>
                </div>
                <div class="col-md-12 padding-top-30">
                    <a onclick="SendMessage()" class="btn btn-default btn-xl btn-normal margin-top-20 contact-btn">ارسال پیام</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->

