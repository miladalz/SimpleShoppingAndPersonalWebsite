</section>
<!-- Support Section End -->

<!-- Team Section Start -->
<section class="padding-bottom-50" id="team">
    <div class="container">
        <div class="row text-center">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2 class="section-title-divider primary-divider">@teams.Title</h2>
                    <!-- SECTION TITLE -->
                    <p>
                        @teams.Description
                    </p>
                </div>
            </div>
        </div>
        <div class="row text-center">
            @foreach (var item in teams.TeamMemberItems)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="team-wrap text-center">
                        <div class="team-image">
                            <img alt="" src="@item.Image" title="@item.Name" class="img-responsive" />
                        </div>
                        <div class="team-title">
                            <h3>@item.Name</h3>
                            <span>@item.Jobtitle</span>
                        </div>
                        <div class="team-content">
                            @item.Description
                        </div>
                        <div class="team-social-links">
                            <ul class="list-inline">
                                <li><a href="@item.Facebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="@item.Twitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="@item.Linkedin" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                                <li><a href="@item.GooglePlus" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Team Section End -->

<!-- Testimonial Section Start -->
@{
    var clientTitleImage = clients.FirstOrDefault().TitleImage;
}
<section class="section-parallax section-typo-white" data-src="@clientTitleImage" data-stellar-background-ratio="0.5">
    <span class="overlay-section-bg black-section-bg"></span>
    <div class="container section-typo-white">
        <div class="row">
            <div dir="ltr" class="col-sm-8 col-sm-offset-2 text-center">
                <div class="testimonial-wrapper">
                    <div class="owl-carousel white-dots testimonial-slider" data-items="1" data-loop="true" data-slideby="1" data-margin="0" data-nav="false" data-dots="true" data-smart-speed="1000" data-left-arrow="fa fa-angle-left" data-right-arrow="fa fa-angle-right">
                        @foreach (var item in clients)
                        {
                            @if (!string.IsNullOrWhiteSpace(item.Comment))
                            {
                                <div class="testimonial-item">
                                    <div class="testimonial-title">
                                        <div class="testimonial-image img-thumbnail">
                                            <img alt="" src="@item.Image" class="img-responsive" title="Testimonial" />
                                        </div>
                                        <h4>@item.Title</h4>
                                        <span>@item.Description</span>
                                    </div>
                                    <div class="testimonial-content">
                                        <p>@item.Comment</p>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonial Section End -->

